extends layout
block content
  div(class='container mt-4')
    div(class='jumbotron')
      h1(class='display-4') Successfully uploaded!
      p(class='lead') Link to the image: 
        a(class="link-to-image" href=imgSrcUrl, target='_blank') #{imgSrcUrl}
      hr(class='my-4')
      img(class='uploaded-image', src=imgSrc, alt=imgAlt)